@model IEnumerable<agenda.Models.Contact>
@{
    ViewData["Title"] = "Contact List";
}

<h2>@ViewData["Title"] - Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">New Contact</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Phone)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelContact => contact.Name)</td>
                <td>@Html.DisplayFor(modelContact => contact.Email)</td>
                <td>@Html.DisplayFor(modelContact => contact.Phone)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@contact.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
